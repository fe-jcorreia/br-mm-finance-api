generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  firstName String
  lastName  String

  projects UserProject[]

  @@map("users")
}

model Project {
  id          String @id @default(uuid())
  title       String
  description String

  users     UserProject[]
  cashflows Cashflow[]

  @@map("projects")
}

enum UserProjectRoleEnum {
  OWNER
  EDITOR
  READER
}

model UserProject {
  id   String              @id @default(uuid())
  role UserProjectRoleEnum

  user      User    @relation(fields: [userId], references: [id])
  userId    String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  @@map("user_projects")
}

enum CashflowOperationEnum {
  CREDIT
  DEBIT
}

model Cashflow {
  id          String                @id @default(uuid())
  title       String
  description String
  date        DateTime
  value       Int
  operation   CashflowOperationEnum

  category   CashflowCategory @relation(fields: [categoryId], references: [id])
  categoryId String
  project    Project          @relation(fields: [projectId], references: [id])
  projectId  String

  @@map("cashflows")
}

model CashflowCategory {
  id   String @id @default(uuid())
  name String

  Cashflow Cashflow[]

  @@map("cashflow_categories")
}
